<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.CheckComboBox?>
<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.MainController">
    <cursor>
        <Cursor fx:constant="DEFAULT" />
    </cursor>
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar fx:id="menuBarMain">
            <Menu mnemonicParsing="false" text="%menubar.file">
                <MenuItem mnemonicParsing="false" text="%menubar.new"/>
                <MenuItem mnemonicParsing="false" text="%menubar.open"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" text="Close"/>
                <MenuItem mnemonicParsing="false" text="Save"/>
                <MenuItem mnemonicParsing="false" text="Save As…"/>
                <MenuItem mnemonicParsing="false" text="Revert"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem fx:id="menuSetting" mnemonicParsing="false" onAction="#onMenuSetting" text="Setting" />
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem fx:id="menuExit" mnemonicParsing="false" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="Изменить">
                <MenuItem mnemonicParsing="false" text="Undo"/>
                <MenuItem mnemonicParsing="false" text="Redo"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" text="Cut"/>
                <MenuItem mnemonicParsing="false" text="Copy"/>
                <MenuItem mnemonicParsing="false" text="Paste"/>
                <MenuItem mnemonicParsing="false" text="Delete"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" text="Select All"/>
                <MenuItem mnemonicParsing="false" text="Unselect All"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
        <TabPane fx:id="tabPanel" tabClosingPolicy="ALL_TABS" tabMaxHeight="50.0" tabMaxWidth="100.0" VBox.vgrow="ALWAYS">
            <Tab fx:id="tabMain" text="%tab.main.name">
                <AnchorPane fx:id="anchorPaneTabMain" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <VBox layoutX="275.0" layoutY="85.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <TableView fx:id="tableView" editable="true" onMouseClicked="#onSelectCategoryMainTable" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="description" prefWidth="75.0" text="%main.tableView.description" />
                                <TableColumn fx:id="dateOperation" prefWidth="75.0" text="%main.tableView.dateOperation" />
                                <TableColumn fx:id="category" prefWidth="75.0" text="%main.tableView.category" />
                                <TableColumn fx:id="paymentAmount" prefWidth="75.0" text="%main.tableView.paymentAmount" />
                                <TableColumn fx:id="roundingInvestment" prefWidth="75.0" text="%main.tableView.roundingInvestment" />
                                <TableColumn fx:id="operationAmountRounding" prefWidth="75.0" text="%main.tableView.operationAmountRounding" />
                                <TableColumn fx:id="transactionCurrency" prefWidth="75.0" text="%main.tableView.transactionCurrency" />

                                <TableColumn fx:id="datePayment" prefWidth="75.0" text="%main.tableView.datePayment" visible="false" />
                                <TableColumn fx:id="numberCard" prefWidth="75.0" text="%main.tableView.numberCard" visible="false" />
                                <TableColumn fx:id="status" prefWidth="75.0" text="%main.tableView.status" visible="false" />
                                <TableColumn fx:id="transactionAmount" prefWidth="75.0" text="%main.tableView.transactionAmount" visible="false" />

                                <TableColumn fx:id="paymentCurrency" prefWidth="75.0" text="%main.tableView.paymentCurrency" visible="false" />
                                <TableColumn fx:id="cashback" prefWidth="75.0" text="%main.tableView.cashback" visible="false" />
                                <TableColumn fx:id="mcc" prefWidth="75.0" text="%main.tableView.mcc" visible="false" />
                                <TableColumn fx:id="bonuses" prefWidth="75.0" text="%main.tableView.bonuses" visible="false" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </VBox.margin>
                        </TableView>
                    </VBox>
                </AnchorPane>
            </Tab>
            <Tab fx:id="tabDiagram" text="%tab.diagram.name">
                <AnchorPane fx:id="anchorPaneTabDiagram" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <SplitPane centerShape="false" dividerPositions="0.35" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <rotationAxis>
                            <Point3D z="10.0" />
                        </rotationAxis>
                        <AnchorPane maxWidth="380.0" minWidth="264.0">
                            <VBox layoutX="38.0" layoutY="36.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <VBox layoutX="38.0" layoutY="36.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <HBox spacing="8.0" VBox.vgrow="SOMETIMES">
                                        <VBox.margin>
                                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                        </VBox.margin>
                                            <DatePicker fx:id="datePikerDiagramFrom" onAction="#onSelectDate" prefWidth="120.0" />
                                            <CheckComboBox fx:id="monthBox" nodeOrientation="LEFT_TO_RIGHT" prefWidth="120.0" title="%tab.diagram.filter.month" />
                                    </HBox>
                                    <HBox spacing="8.0" VBox.vgrow="SOMETIMES">
                                        <VBox.margin>
                                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                        </VBox.margin>
                                            <DatePicker fx:id="datePikerDiagramTo" onAction="#onSelectDate" prefWidth="120.0" />
                                            <CheckComboBox fx:id="categoryBox" prefWidth="120.0" title="%tab.diagram.filter.category" />
                                    </HBox>
                                </VBox>
                                <TableView fx:id="listView" editable="true" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="name" prefWidth="75.0" text="%main.tableView.description" />
                                    <TableColumn fx:id="sum" prefWidth="75.0" text="%main.tableView.paymentAmount" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                                <VBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                </VBox.margin>
                                </TableView>
<!--                                <ListView fx:id="listView" editable="true" VBox.vgrow="ALWAYS" />-->
                            </VBox>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <PieChart fx:id="pieChartDiagram" accessibleHelp="===" labelsVisible="false" legendSide="LEFT" legendVisible="false" onMouseClicked="#onSelectCategoryDiagram" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <cursor>
                                    <Cursor fx:constant="CROSSHAIR" />
                                </cursor>
                            </PieChart>
                            <Label fx:id="captionDiagram" textFill="RED" wrapText="true">
                                <font>
                                    <Font size="20.0" />
                                </font>
                            </Label>
                        </AnchorPane>
                    </SplitPane>
                </AnchorPane>
            </Tab>
        </TabPane>
        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0">
            <opaqueInsets>
                <Insets left="50.0" right="50.0" />
            </opaqueInsets>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <Button fx:id="selectFile" mnemonicParsing="false" onMouseClicked="#onSelectFile" prefHeight="28.0" prefWidth="130.0" text="%main.select">
                <font>
                    <Font size="14.0" />
                </font>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </Button>
            <Button fx:id="update" disable="true" mnemonicParsing="false" onMouseClicked="#onUpdate" prefHeight="28.0" prefWidth="130.0" text="%main.update">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button fx:id="save" disable="true" mnemonicParsing="false" onMouseClicked="#onSave" prefHeight="28.0" prefWidth="130.0" text="%main.save">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <TextField fx:id="searchTextField" onKeyTyped="#onSearchText" prefHeight="28.0" prefWidth="130.0" promptText="%main.searchText">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>
            <Label fx:id="label" />
        </ToolBar>
    </VBox>
</AnchorPane>