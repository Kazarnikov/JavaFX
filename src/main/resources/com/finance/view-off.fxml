<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="anchorPane" prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.ControllerOff">
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
        <TabPane fx:id="tabPanel" tabClosingPolicy="ALL_TABS" tabMaxHeight="50.0" tabMaxWidth="100.0"
                 VBox.vgrow="ALWAYS">
            <Tab fx:id="tabMain" text="Главная">
                <AnchorPane fx:id="anchorPaneTabMain" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                            prefWidth="200.0">
                    <VBox layoutX="275.0" layoutY="85.0" prefHeight="200.0" prefWidth="100.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0">
                        <TableView fx:id="tableView" editable="true" onMouseClicked="#onSelectCategoryMainTable"
                                   tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="description" prefWidth="75.0" text="Название"/>
                                <TableColumn fx:id="dateOperation" prefWidth="75.0" text="Дата операции"/>
                                <TableColumn fx:id="category" prefWidth="75.0" text="Категория"/>
                                <TableColumn fx:id="price" prefWidth="75.0" text="Сумма"/>

                                <TableColumn fx:id="datePayment" prefWidth="75.0" text="Дата платежа" visible="false"/>
                                <TableColumn fx:id="numberCard" prefWidth="75.0" text="Номер карты" visible="false"/>
                                <TableColumn fx:id="status" prefWidth="75.0" text="Статус" visible="false"/>
                                <TableColumn fx:id="transactionAmount" prefWidth="75.0" text="Сумма операции" visible="false"/>
                                <TableColumn fx:id="transactionCurrency" prefWidth="75.0" text="Валюта операции" visible="false"/>
                                <TableColumn fx:id="paymentAmount" prefWidth="75.0" text="Сумма платежа" visible="false"/>
                                <TableColumn fx:id="paymentCurrency" prefWidth="75.0" text="Валюта платежа" visible="false"/>
                                <TableColumn fx:id="cashback" prefWidth="75.0" text="Кэшбэк" visible="false"/>
                                <TableColumn fx:id="mcc" prefWidth="75.0" text="MCC" visible="false"/>
                                <TableColumn fx:id="bonuses" prefWidth="75.0" text="Бонусы (включая кэшбэк)" visible="false"/>
                                <TableColumn fx:id="roundingInvestment" prefWidth="75.0" text="Округление на инвесткопилку" visible="false"/>
                                <TableColumn fx:id="operationAmountRounding" prefWidth="75.0" text="Сумма операции с округлением" visible="false"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <VBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </VBox.margin>
                        </TableView>
                    </VBox>
                </AnchorPane>
            </Tab>
            <Tab fx:id="tabDiagramma" text="Диаграмма">
                <AnchorPane fx:id="anchorPaneTabDiagramma" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                            prefWidth="200.0">
                    <SplitPane centerShape="false" dividerPositions="0.35" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <rotationAxis>
                            <Point3D z="10.0"/>
                        </rotationAxis>
                        <AnchorPane maxWidth="380.0" minWidth="264.0">
                            <VBox layoutX="38.0" layoutY="36.0" AnchorPane.bottomAnchor="0.0"
                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <HBox spacing="8.0" VBox.vgrow="SOMETIMES">
                                    <VBox.margin>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                    </VBox.margin>
                                    <ComboBox fx:id="comboBox" nodeOrientation="LEFT_TO_RIGHT" prefWidth="120.0"
                                              visibleRowCount="13"/>
                                    <DatePicker fx:id="datePikerDiagrammaFrom" onAction="#onSelectDate"
                                                prefWidth="120.0"/>
                                    <DatePicker fx:id="datePikerDiagrammaTo" onAction="#onSelectDate"
                                                prefWidth="120.0"/>
                                </HBox>
                                <ListView fx:id="listView" editable="true" VBox.vgrow="ALWAYS"/>
                            </VBox>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <PieChart fx:id="pieChartDiagramma" accessibleHelp="===" clockwise="false"
                                      labelsVisible="false" legendSide="LEFT" legendVisible="false"
                                      onMouseClicked="#onSelectCategoryDiagramma" AnchorPane.bottomAnchor="0.0"
                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                      AnchorPane.topAnchor="0.0">
                                <cursor>
                                    <Cursor fx:constant="CROSSHAIR"/>
                                </cursor>
                            </PieChart>
                            <Label fx:id="captionDiagramma" textFill="RED" wrapText="true">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                            </Label>
                        </AnchorPane>
                    </SplitPane>
                </AnchorPane>
            </Tab>
        </TabPane>
        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0">
            <opaqueInsets>
                <Insets left="50.0" right="50.0"/>
            </opaqueInsets>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <Button fx:id="selectFile" mnemonicParsing="false" onMouseClicked="#onSelectFile" prefHeight="28.0"
                    prefWidth="130.0" text="Выбрать">
                <font>
                    <Font size="14.0"/>
                </font>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </Button>
            <Button fx:id="update" disable="true" mnemonicParsing="false" onMouseClicked="#onUpdate" prefHeight="28.0"
                    prefWidth="130.0" text="Обновить">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
            <Button fx:id="save" disable="true" mnemonicParsing="false" onMouseClicked="#onSave" prefHeight="28.0"
                    prefWidth="130.0" text="Сохранить">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
            <TextField fx:id="searchTextField" onKeyTyped="#onSearchText" prefHeight="28.0" prefWidth="130.0"
                       promptText="Искать...">
                <font>
                    <Font size="14.0"/>
                </font>
            </TextField>
            <Label fx:id="label"/>
        </ToolBar>
    </VBox>
</AnchorPane>
